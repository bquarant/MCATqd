        margin: 0 auto;
        max-width: 700px;
      }
      .container-narrow > hr {
        margin: 15px 0;
      }

      /* Main marketing message and sign up button */
      .jumbotron {
        margin: 60px 0;
        text-align: justify;
      }
      .jumbotron h1 {
        font-size: 72px;
        line-height: 1;
		text-align: center;
      }
      .jumbotron .btn {
        font-size: 21px;
        padding: 14px 24px;
      }


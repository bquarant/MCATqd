<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, 
							  :url => session_path(resource_name),
							  :html => { :class => "form-inline", :style=>"margin-left:15%; width=100%;"}) do |f| %>
							
    <%= f.input :email, :required => false, :autofocus => true, :label =>"Email:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;" %>
	<br>
    <%= f.input :password, :required => false, :label =>"Password:&nbsp;&nbsp;" %>
	<br>
	<div class="form-horizontal">
	<%= f.input :remember_me, :label=>"Remember password", :as => :boolean if devise_mapping.rememberable? %>
	</div>
	<br><br>
	<%= f.button :submit, "Sign in", :class => "btn btn-primary" %>
<% end %>

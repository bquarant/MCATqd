<div id="content">
	<div id="topSection">
		<div id="firstRow">
			<div id="topAdSpace">
				<!--	<img src="http://placehold.it/865x25"> -->
			</div>
		</div>
		<div id="secondRow">
			<div id="leftAdSpace">
				<!-- <img src="http://placehold.it/120x485"> -->
			</div>
			<div id="sessionContentSpace">
				<br>
				<%= form_for(:session, :url => sessions_path) do |f| %>
  					<div class="field">
    					<%= f.text_field :email %><%= f.label :email %>
  					</div>
  					<div class="field">
    					<%= f.password_field :password %><%= f.label :password %>
  					</div>
  					<div class="actions">
    				<%= f.submit "Sign in" %>
  					</div>
				<% end %>
				<p>New user? <%= link_to "Sign up now!", signup_path %></p>
				<hr>
			</div>
			<div id="rightAdSpace">
			<!-- 	<img src="http://placehold.it/120x485"> -->
			</div>
		</div>
	</div>
</div>